@model FoodForHome.Web.ViewModels.Dishes.SingleDishViewModel
@using FoodForHome.Common
@{
    this.ViewData["Title"] = this.Model.CategoryName + " " + this.Model.Name;
    var dishImg = this.Model.ImageUrl;
}

<link href="~/css/byId.css" rel="stylesheet" />

<div class="d-flex align-items-center box-shadow">
    <div class="flex-shrink-0">
        <img class="rounded" src="@dishImg" alt="...">
    </div>
    <div class="flex-grow-1 ms-2">
        <div>
            @if (this.User.IsInRole(GlobalConstants.AdministratorRoleName))
            {
                <div class="d-flex justify-content-end">
                    <button type="button" class="btn btn-outline-warning"><a asp-action="Edit" asp-route-id="@this.Model.Id">Edit dish</a></button>
                    <button type="button" class="btn btn-outline-danger"><a asp-action="Delete" asp-route-id="@this.Model.Id">Delete dish</a></button>
                </div>
            }
            <h2 class="d-flex">@this.Model.Name</h2>
            <p class="d-flex justify-content-start">@this.Model.Gram grams</p>
            <p class="d-flex font-weight-bold">Ingredients:</p>
            @foreach (var ingredient in this.Model.Ingredients)
            {
                <span class="d-flex justify-content-start">@ingredient.Name</span>
            }
            <div id="categoryName" class="d-flex font-weight-bold"><a asp-action="ByCategory" asp-route-id="@this.Model.CategoryId">@this.Model.CategoryName</a></div>
            <div class="d-flex bd-highlight">
                <div class="p-2 flex-grow-1 bd-highlight font-weight-bold">Price:</div>
                <div class="p-2 bd-highlight font-weight-bold">@this.Model.Price BGN</div>
            </div>
            <div id="gap" class="d-flex align-items-center">
                @*<input asp-for="Quantity" type="text" id="edit-quantity" name="quantity" value="1" size="5" maxlength="128" class="form-text">*@
                <a asp-controller="Cart" asp-action="Buy" asp-route-id="@this.Model.Id">Add to cart</a>
            </div>
        </div>
    </div>
</div>




