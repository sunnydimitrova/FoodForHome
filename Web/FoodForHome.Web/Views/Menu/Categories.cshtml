@model FoodForHome.Web.ViewModels.Menu.MenuViewModel
@{
    this.ViewData["Title"] = "Menu";
}

<h2>@this.ViewData["Tittle"]</h2>
<div class="row">
    @foreach (var category in this.Model.Categories)
    {
        <a asp-controller="Dish" asp-action="ByCategory" asp-route-id="@category.Id">
            <div class="col-md-3">
                <img src="@category.ImageUrl" width="300" height="220" class="mr-3 img-responsive">
                <div class="media-body">
                    <h5 class="mt-0">@category.Name</h5>
                </div>
            </div>
         </a>
     }
    </div>
