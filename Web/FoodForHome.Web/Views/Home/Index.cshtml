@using FoodForHome.Common
@model FoodForHome.Web.ViewModels.Dishes.DishesByCategoryViewModel
@{
    this.ViewData["Title"] = "Home Page";
}
<link href="~/css/index.css" rel="stylesheet" />
<h2>Today's lunch menu</h2>
@if (Model.Dishes.Count() == 0)
{
    <div>Today we haven't lunch menu</div>
}
else
{
    var counter = 0;
    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            @foreach (var dish in Model.Dishes)
            {
                var currentImage = dish.ImageUrl;
                if (counter == 0)
                {

                    <div class="carousel-item active image-container">
                        <a asp-controller="Dish" asp-action="ById" asp-route-id="@dish.Id">
                            <h5 class="dish-name">@dish.Name</h5>
                            <img class="d-block w-100 image-url" src="@currentImage" alt="First slide">
                        </a>
                    </div>

                }
                else
                {
                    <div class="carousel-item">
                        <a asp-controller="Dish" asp-action="ById" asp-route-id="@dish.Id">
                            <h5 class="dish-name">@dish.Name</h5>
                            <img class="d-block w-100 image-url" src="@currentImage" alt="First slide">
                        </a>
                    </div>
                }
                counter++;
            }
        </div>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
}



